<%- include("partials/header.ejs") %>

    <div class="mt-3 ms-5 me-5">
        <div class="text-center">
            <form action="/updateordelete" method="post">
                <label for="posttitle">Enter Post Title</label><br>

                <div class="input-group mb-3">
                    <input type="text" class="form-control" placeholder="Post Title" aria-label="Username"
                        aria-describedby="basic-addon1" name="posttitle" id="pT" value="<%= postTitle %>" required>
                </div>

                <label for="">Enter Article</label><br>

                <textarea class="form-control" aria-label="With textarea" name="postbody" placeholder="Post..."
                    id="pB"><%= postBody %></textarea><br>
                <input type="text" name="fileName" id="" hidden value="<%= postTitle %>">
                <input type="submit" value="Update Post" class="btn btn-primary">
                <input type="submit" value="Delete Post" name="timeToDelete" class="btn btn-danger">
            </form>
        </div>
    </div>
    <%- include("partials/footer.ejs") %>